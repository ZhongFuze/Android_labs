<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mycompany.fruit.CarActivity"
    tools:showIn="@layout/activity_car"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <include
        android:id="@+id/detail_top"
        layout="@layout/detail_top"
        android:layout_height="362dp"
        android:layout_width="385dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="#FFFFFF"
        android:layout_marginTop="350dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.512"
        app:layout_constraintTop_toTopOf="@+id/detail_top">
        <include
            android:id="@+id/car_style"
            layout="@layout/car_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        app:layout_constraintGuide_begin="362dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="362dp"
        tools:layout_editor_absoluteX="0dp" />




</android.support.constraint.ConstraintLayout>
