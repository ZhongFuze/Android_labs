<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcaozhi"
    tools:context=".UserHeroDetail">

    <ImageView
        android:id="@+id/hero_piture"
        android:layout_width="170dp"
        android:layout_height="230dp"
        app:srcCompat="@drawable/bcaocao"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:id="@+id/rlay2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/hero_piture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/buttonstart"
            android:layout_width="110dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/buttonstart"
            />

        <ImageView
            android:id="@+id/buttondelete"
            android:layout_width="110dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/buttondelete"
            android:layout_toRightOf="@+id/buttonstart"
            android:layout_toEndOf="@+id/buttonstart"
            />

        <ImageView
            android:id="@+id/buttonreturn"
            android:layout_width="110dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/buttonreturn"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/buttondelete"
            android:layout_toEndOf="@+id/buttondelete" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:id="@+id/rlay"
        android:background="@drawable/bgcard4"

        android:layout_below="@+id/hero_piture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            android:textSize="60px"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"

            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="曹操"
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:layout_toEndOf="@+id/name" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别："
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name" />

        <TextView
            android:id="@+id/show_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_alignBaseline="@+id/sex"
            android:layout_alignBottom="@+id/sex"
            android:layout_alignLeft="@+id/show_name"
            android:layout_alignStart="@+id/show_name" />

        <TextView
            android:id="@+id/birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生："
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_below="@+id/sex"
            android:layout_alignLeft="@+id/sex"
            android:layout_alignStart="@+id/sex" />

        <TextView
            android:id="@+id/show_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_below="@+id/show_sex"
            android:layout_alignLeft="@+id/show_sex"
            android:layout_alignStart="@+id/show_sex" />

        <TextView
            android:id="@+id/death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="死亡："
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_below="@+id/birth"
            android:layout_alignLeft="@+id/birth"
            android:layout_alignStart="@+id/birth" />

        <TextView
            android:id="@+id/show_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_below="@+id/show_birth"
            android:layout_alignLeft="@+id/show_birth"
            android:layout_alignStart="@+id/show_birth" />

        <TextView
            android:id="@+id/native_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="势力："
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_below="@+id/death"
            android:layout_alignLeft="@+id/death"
            android:layout_alignStart="@+id/death" />

        <TextView
            android:id="@+id/show_native_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="魏"
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_below="@+id/show_death"
            android:layout_alignLeft="@+id/show_death"
            android:layout_alignStart="@+id/show_death" />

        <TextView
            android:id="@+id/attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="攻击："
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_below="@+id/native_"
            android:layout_alignLeft="@+id/native_"
            android:layout_alignStart="@+id/native_" />

        <ProgressBar
            android:id="@+id/show_attack"
            android:layout_width="200dp"
            android:layout_height="5dp"
            android:textColor="#000000"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="110"
            android:progress="20"
            android:progressDrawable="@drawable/progress3"
            android:gravity="center_vertical"
            android:layout_below="@+id/native_"
            android:layout_toRightOf="@+id/attack"
            android:layout_toEndOf="@+id/attack"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/attack_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="40px"
            android:textColor="#000000"
            android:layout_below="@+id/show_native_"
            android:layout_toRightOf="@+id/show_attack"
            android:layout_toEndOf="@+id/show_attack"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/defense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防御："
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_below="@+id/attack"
            android:layout_alignLeft="@+id/attack"
            android:layout_alignStart="@+id/attack" />

        <ProgressBar
            android:id="@+id/show_defense"
            android:layout_width="200dp"
            android:layout_height="5dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="110"
            android:progress="20"
            android:progressDrawable="@drawable/progress2"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/attack"
            android:layout_toRightOf="@+id/defense"
            android:layout_toEndOf="@+id/defense" />

        <TextView
            android:id="@+id/defense_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="40px"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/defense"
            android:layout_alignLeft="@+id/attack_num"
            android:layout_alignStart="@+id/attack_num" />

        <TextView
            android:id="@+id/live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生命："
            android:textSize="60px"
            android:textColor="#000000"
            android:layout_below="@+id/defense"
            android:layout_alignLeft="@+id/defense"
            android:layout_alignStart="@+id/defense" />

        <ProgressBar
            android:id="@+id/show_live"
            android:layout_width="200dp"
            android:layout_height="5dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="110"
            android:progress="20"
            android:progressDrawable="@drawable/progress"
            android:layout_below="@+id/defense"
            android:layout_toRightOf="@+id/live"
            android:layout_toEndOf="@+id/live"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:id="@+id/live_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="40px"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_alignBottom="@+id/live"
            android:layout_alignLeft="@+id/defense_num"
            android:layout_alignStart="@+id/defense_num" />

    </RelativeLayout>





</RelativeLayout>
