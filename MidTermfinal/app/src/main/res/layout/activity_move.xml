<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qiang4"
    tools:context="com.zhong.midterm.MoveActivity">

    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:id="@+id/linearLayout_1"
        android:layout_marginStart="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/linearLayout_2">
        <com.zhong.midterm.NumberProgressBar
            android:id="@+id/left_live"
            android:layout_width="match_parent"
            style="@style/NumberProgressBar_Funny_Orange"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_alignEnd="@+id/left" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"

        android:id="@+id/linearLayout_2"
        android:layout_below="@+id/linearLayout_1"
        android:layout_toEndOf="@+id/left_people">
        <com.zhong.midterm.NumberProgressBar
            android:id="@+id/left_attr"
            android:layout_width="match_parent"
            style="@style/NumberProgressBar_Grace_Yellow"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_alignEnd="@+id/left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:id="@+id/linearLayout_3"
        android:layout_below="@+id/linearLayout_2"
        android:layout_alignStart="@+id/linearLayout_2"
        android:layout_marginTop="6dp">
        <com.zhong.midterm.NumberProgressBar
            android:id="@+id/left_def"
            android:layout_width="match_parent"
            style="@style/NumberProgressBar_Relax_Blue"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_alignEnd="@+id/left" />
    </LinearLayout>


   <LinearLayout
       android:layout_width="165dp"
       android:layout_height="20dp"
       android:id="@+id/linearLayout_4"
       android:layout_alignTop="@+id/linearLayout_1"
       android:layout_alignEnd="@+id/linearLayout_5"
       android:layout_marginEnd="11dp">
       <com.zhong.midterm.NumberProgressBar
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/right_live"
           style="@style/NumberProgressBar_Funny_Orange_T"
           />

   </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout_5"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/linearLayout_2"
        android:layout_alignEnd="@+id/right_people"
        android:layout_marginEnd="38dp">
        <com.zhong.midterm.NumberProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/right_attr"
            style="@style/NumberProgressBar_Grace_Yellow_T"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_6"
        android:layout_width="120dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/linearLayout_3"
        android:layout_alignStart="@+id/linearLayout_5">
        <com.zhong.midterm.NumberProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/right_def"
            style="@style/NumberProgressBar_Relax_Blue_T"/>
    </LinearLayout>






    <ImageView
        android:id="@+id/left"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/minifutou"
        android:scaleType="centerInside"
        android:layout_marginStart="40dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/left_people" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/chuo_t"
        android:scaleType="centerInside"
        android:layout_marginEnd="29dp"
        android:layout_alignTop="@+id/left"
        android:layout_toStartOf="@+id/right_people" />
    <ImageView
        android:id="@+id/left_people"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/caopi"
        android:scaleType="centerInside"
        android:layout_marginStart="14dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/right_people"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/caopi"
        android:layout_marginEnd="14dp"
        android:layout_alignTop="@+id/left_people"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/left"
        android:layout_alignStart="@+id/linearLayout_1">

        <TextView
            android:id="@+id/left_name"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:text="liubei"
            android:textSize="9dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="11dp"
            android:id="@+id/left_sex"
            android:text="nan"
            android:textSize="9dp"
            android:layout_below="@+id/left_name"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="12dp"
            android:id="@+id/left_native"
            android:text="nan"
            android:textSize="9dp"
            android:layout_below="@+id/left_sex"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignEnd="@+id/linearLayout_6">

        <TextView
            android:id="@+id/right_name"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:text="曹丕"
            android:paddingTop="3dp"
            android:textAlignment="center"
            android:textSize="9dp"
             />

        <TextView
            android:layout_width="30dp"
            android:layout_height="11dp"
            android:id="@+id/right_sex"

            android:text="男"
            android:textSize="9dp"
            android:textAlignment="center"
            android:layout_below="@+id/right_name"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="12dp"
            android:id="@+id/right_native"
            android:text="魏"
            android:textSize="9dp"
            android:textAlignment="center"
            android:layout_below="@+id/right_sex"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
