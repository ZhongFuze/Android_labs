<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgcaozhi"
    >

    <RelativeLayout
        android:id="@+id/shu_card"
        android:layout_width="wrap_content"
        android:layout_height="150dp">

        <ImageButton
            android:id="@+id/add_shu"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/changebutton"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/plus"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <com.zhong.midterm.MultiSnapRecyclerView
            android:id="@+id/first_recycler_view"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:msrv_gravity="start"
            app:msrv_snap_count="1"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/add_shu"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/Wei_card">
        <ImageButton
            android:id="@+id/add_wei"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/changebutton"
            app:srcCompat="@drawable/plus"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <com.zhong.midterm.MultiSnapRecyclerView
            android:id="@+id/second_recycler_view"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            app:msrv_gravity="center"
            app:msrv_snap_count="2"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/add_wei"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/Wu_card">
        <ImageButton
            android:id="@+id/add_wu"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:background="@drawable/changebutton"
            app:srcCompat="@drawable/plus"
            android:scaleType="centerInside"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <com.zhong.midterm.MultiSnapRecyclerView
            android:id="@+id/third_recycler_view"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            app:msrv_gravity="end"
            app:msrv_snap_count="2"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/add_wu"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>




</LinearLayout>