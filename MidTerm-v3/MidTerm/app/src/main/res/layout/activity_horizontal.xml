<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--android:text="Gravity: Start, SnapCount: 1"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="蜀国"
        android:textSize="16sp" />

    <com.zhong.midterm.MultiSnapRecyclerView
        android:id="@+id/first_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:msrv_gravity="start"
        app:msrv_snap_count="1" />

    <!--android:text="Gravity: Center, SnapCount: 2"-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="魏国"
        android:textSize="16sp" />

    <com.zhong.midterm.MultiSnapRecyclerView
        android:id="@+id/second_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        app:msrv_gravity="center"
        app:msrv_snap_count="2" />


    <!--android:text="Gravity: End, SnapCount: 2"-->
    <TextView
        android:id="@+id/item_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="吴国"
        android:textSize="16sp" />

    <com.zhong.midterm.MultiSnapRecyclerView
        android:id="@+id/third_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        app:msrv_gravity="end"
        app:msrv_snap_count="2" />

</LinearLayout>