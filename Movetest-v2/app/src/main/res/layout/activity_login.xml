<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/appyellow"
    >

    <android.support.constraint.ConstraintLayout

        android:background="@color/appdark"
        android:layout_width="320dp"
        android:layout_height="380dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">


        <TextView
            android:id="@+id/TitleReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎进入MAPU"
            android:textSize="30dp"
            android:textColor="@color/appyellow"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:id="@+id/login_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="yourname"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/TitleReg"
            app:layout_constraintLeft_toRightOf="@+id/text_name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/login_name"
            app:layout_constraintLeft_toRightOf="@+id/text_pass"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <Button
            android:id="@+id/login"
            android:layout_width="210dp"
            android:layout_height="42dp"
            android:text="登   录"
            android:onClick="getRequestLogin"
            android:textColor="@color/appdark"
            android:background="@drawable/button_login"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/login_pass"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.782" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textColor="@color/appyellow"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/TitleReg"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/appyellow"
            android:textSize="20dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/text_name"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/msg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有账号？"
            android:textColor="@color/appyellow"
            android:layout_marginLeft="91dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/login_pass" />

        <TextView
            android:id="@+id/msg4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="@color/appyellow"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/login_pass"
            app:layout_constraintLeft_toRightOf="@+id/msg3"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.476" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>