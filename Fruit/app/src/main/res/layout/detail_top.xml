<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:layout_width="383dp"
        android:layout_height="162dp"
        android:background="#D5D5D5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="0dp" />

    <ImageView
        android:id="@+id/click_fruit_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ferrero"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline2" />

    <ImageButton
        android:id="@+id/click_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/click_fruit_name"
        android:layout_width="208dp"
        android:layout_height="31dp"
        android:layout_weight="1"
        android:text="ferrero Rocher"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.98"
        android:layout_marginStart="20dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="160dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="160dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/click_fruit_mes"
        android:layout_width="208dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:text="￥ 132.90 重量 300g"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_220"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.428" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_220"
        app:layout_constraintGuide_begin="220dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="220dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/add_to_car"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerInside"
        android:background="@drawable/goodsbutton"
        app:srcCompat="@drawable/shoplist"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/click_fruit_mes"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_220"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintVertical_bias="0.333"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="#D5D5D5"
        app:layout_constraintRight_toLeftOf="@+id/imageButton"
        app:layout_constraintLeft_toRightOf="@+id/click_fruit_mes"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_220"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="#D5D5D5"
        app:layout_constraintTop_toTopOf="@+id/guideline_220"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <View
        android:layout_width="368dp"
        android:layout_height="20dp"
        android:background="#D5D5D5"
        app:layout_constraintTop_toTopOf="@+id/guideline_220"
        android:layout_marginTop="60dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/moreMes"
        android:layout_width="208dp"
        android:layout_height="31dp"
        android:text="更多产品信息"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="@+id/guideline_220"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="208dp"
        android:layout_height="31dp"
        android:text="相关产品"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        android:layout_marginStart="20dp" />

    <View
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:background="#D5D5D5"
        app:layout_constraintTop_toTopOf="@+id/guideline_220"
        android:layout_marginTop="130dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/view2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="360dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="360dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>


